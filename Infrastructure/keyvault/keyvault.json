{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "defaultValue": "kv-ss-financeapp-001"
        }
    },
    "variables": {
        "simonSuthersId": "b8b27381-e060-47fb-87e1-d8bab6f6d89b",
        "keysPermissions": ["list"],
        "secretsPermissions": ["list"],
        "certificatePermissions": ["list"]
    },
    "resources": [
        {
            "apiVersion": "2021-10-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.KeyVault/vaults",
            "properties": {
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": false,
                "enabledForDiskEncryption": false,
                "enableRbacAuthorization": true,
                "accessPolicies": [],
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "Standard",
                    "family": "A"
                },
                "publicNetworkAccess": "Enabled",
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": 30,
                "networkAcls": {
                    "value": {
                        "defaultAction": "allow",
                        "bypass": "AzureServices",
                        "ipRules": [],
                        "virtualNetworkRules": []
                    }
                }
            },
            "tags": {
                "application": "finance"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('keyVaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
              "accessPolicies": [
                {
                  "tenantId": "[subscription().tenantId]",
                  "objectId": "[variables('simonSuthersId)]",
                  "permissions": {
                    "keys": "[variables('keysPermissions')]",
                    "secrets": "[variables('secretsPermissions')]",
                    "certificates": "[variables('certificatePermissions')]"
                  }
                }
              ]
            },
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
            ]
        }
    ],
    "outputs": {}
}